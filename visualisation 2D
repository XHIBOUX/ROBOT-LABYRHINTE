!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Robot Labyrinthe 2D</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.4.0/p5.js"></script>
    <style>
        body { display: flex; justify-content: center; align-items: center; height: 100vh; margin: 0; background: #f0f0f0; }
        canvas { border: 1px solid black; }
    </style>
</head>
<body>
    <script>
        // Variables pour le robot et le labyrinthe
        let robot;
        let walls = [];

        // Classe pour le robot
        class Robot {
            constructor(x, y) {
                this.x = x;
                this.y = y;
                this.size = 20;
                this.speed = 2;
                this.direction = createVector(1, 0);
            }

            move() {
                this.x += this.direction.x * this.speed;
                this.y += this.direction.y * this.speed;
            }

            show() {
                fill(255, 0, 0);
                noStroke();
                ellipse(this.x, this.y, this.size, this.size);
            }

            checkCollision() {
                for (let wall of walls) {
                    if (this.x + this.size / 2 > wall.x &&
                        this.x - this.size / 2 < wall.x + wall.w &&
                        this.y + this.size / 2 > wall.y &&
                        this.y - this.size / 2 < wall.y + wall.h) {
                        this.direction.x *= -1;
                        this.direction.y *= -1;
                    }
                }
            }
        }

        // Classe pour les murs
        class Wall {
            constructor(x, y, w, h) {
                this.x = x;
                this.y = y;
                this.w = w;
                this.h = h;
            }

            show() {
                fill(0, 0, 255);
                noStroke();
                rect(this.x, this.y, this.w, this.h);
            }
        }

        function setup() {
            createCanvas(600, 600);
            robot = new Robot(50, 50);

            // CrÃ©ation des murs du labyrinthe
            walls.push(new Wall(0, 0, 600, 20)); // Haut
            walls.push(new Wall(0, 580, 600, 20)); // Bas
            walls.push(new Wall(0, 0, 20, 600)); // Gauche
            walls.push(new Wall(580, 0, 20, 600)); // Droite
            walls.push(new Wall(100, 100, 400, 20)); // Mur horizontal
            walls.push(new Wall(100, 300, 20, 200)); // Mur vertical
        }

        function draw() {
            background(240);

            // Affichage et mouvement du robot
            robot.move();
            robot.checkCollision();
            robot.show();

            // Affichage des murs
            for (let wall of walls) {
                wall.show();
            }
        }
    </script>
</body>
</html>
